<!-- Modal -->
<div class="modal fade " id="bsConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                <button type="button" @onclick="()=> ConfirmationClicked(false)" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" @onclick="()=> ConfirmationClicked(true)" class="btn @ButtonBootsrtapStyle">@ButtonText</button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation { get; set; }

    [Parameter]
    public string Title { get; set; } = "Please Confirm";
    
    [Parameter]
    public string Body { get; set; } = "Are you sure! you want to delete?";

    [Parameter]
    public string ButtonBootsrtapStyle { get; set; } = "btn-primary";

    [Parameter]
    public string ButtonText { get; set; } = "Confirm";

    private async Task ConfirmationClicked(bool value)
    {
        if(value)
        {
            await OnModalConfirmation.InvokeAsync(true);
        }
    }
}
